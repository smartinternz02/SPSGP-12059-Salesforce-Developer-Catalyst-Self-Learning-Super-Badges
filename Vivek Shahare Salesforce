//NewCaseList

<apex:page controller="NewCaseListController" >
    <apex:pageBlock title="New Cases">
        <apex:repeat var="Case" value="{!newCases}">
            <apex:outputLink value="/{!Case.ID}">{!Case.CaseNumber}</apex:outputLink>
        </apex:repeat>
    </apex:pageBlock>
</apex:page>


